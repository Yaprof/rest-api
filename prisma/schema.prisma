// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  content       String?
  likes         Int      @default(0)
  likedBy       User[]
  dislikedBy    User[]   @relation("dislikedBy")
  published     Boolean  @default(false)
  pointer       Prof     @relation("pointer", fields: [pointerId], references: [id])
  pointerId     Int
  establishment String?
  author        User     @relation("author", fields: [authorId], references: [id])
  authorId      Int
}

model Profile {
  id     Int      @id @default(autoincrement())
  pp     String?
  bio    String?
  badges String[] @default([])
  coins  Int      @default(0)
  user   User     @relation("profile", fields: [userId], references: [id])
  userId Int      @unique
}

model User {
  id            Int      @id @default(autoincrement())
  name          String?  @unique
  class         String?
  role          Int      @default(0)
  establishment String?
  posts         Post[]   @relation("author")
  likes         Post[]
  dislikes      Post[]   @relation("dislikedBy")
  profile       Profile? @relation("profile")
}

model Prof {
  id       Int     @id @default(autoincrement())
  name     String? @unique
  subject  String?
  color    String?
  absences Int     @default(0)
  posts    Post[]  @relation("pointer")
}

model Notifications {
    id     Int @id @default(autoincrement())
}
